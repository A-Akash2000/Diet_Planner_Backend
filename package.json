{
  "name": "hospital_backend",
  "version": "1.0.0",
  "description": "Emergency Response &amp; Ambulance Dispatch System",
  "main": "index.js",
  "scripts": {
    "start:local": "cross-env ENVIRONMENT=local node --max-old-space-size=4096 ./node_modules/nodemon/bin/nodemon.js -r ts-node/register ./src/server.ts",
    "start:demo": "cross-env ENVIRONMENT=demo nodemon",
    "start": "ts-node src/app.ts",
    "build": "tsc"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "node_modules"
    ],
    "exec": "ts-node ./src/server.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/myworksoff/hospital_backend.git"
  },
